<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Store List</title>
    <link rel="stylesheet" href="/bootstrap/dist/css/bootstrap.min.css">
</head>

<body>
    <div class="container">
        <header>
            <h1>List Storage</h1>
            <a class="btn btn-secondary" href="/create">Add Storage</a>
        </header>
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Index</th>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Address</th>
                        <th>Manager</th>
                        <th>Email</th>
                        <th>Image</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each stores}}
                    <tr>
                        <th>{{add @index 1}}</th>
                        <th>{{id}}</th>
                        <th>{{name}}</th>
                        <th>{{address}}</th>
                        <th>{{manager}}</th>
                        <th>{{email}}</th>
                        <th>
                            <img src="{{imageUrl}}" alt="{{name}}">
                        </th>
                        <th>
                            <form action="/delete/{{id}}" method="post">
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Ban co muon xoa cua hang "{{name}}"')">Delete</button>
                            </form>
                        </th>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</body>

</html>